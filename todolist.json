    "/todolist": {
      "get": {
        "summary": "Get All Todolist",
        "description": "Get all todolist by default",
        "parameters": [
          {
            "name": "include done",
            "in": "query",
            "required": false,
            "description": "Include done todolist in the result",
            "schema": {
              "type": "boolean",
              "nullable": true,
              "default": false
            }
          },
          {
            "name": "name",
            "in": "query",
            "required": false,
            "description": "Filter todolist by name",
            "schema": {
              "type": "string",
              "nullable": true,
              "minLength": 1,
              "maxLength": 100
            },
            "examples": {
              "java": {
                "value": "JAVA",
                "description": "Example name JAVA"
              },
              "php": {
                "value": "PHP",
                "description": "Example name PHP"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success get All Todolist",
            "content": {
              "application/json" : {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "priority": {
                        "type": "number",
                        "format": "int32"
                      },
                      "tags": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      }
                    }
                  }
                },
                "examples": {
                  "success": {
                    "description": "Example Success get All Todolist",
                    "value": [
                      {
                        "id": 1,
                        "name": "Java",
                        "priority": 3,
                        "tags": ["Java", "Programming"]
                      },
                      {
                        "id": 2,
                        "name": "PHP",
                        "priority": 5,
                        "tags": ["PHP", "Programming"]
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      },
